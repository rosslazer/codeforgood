
<style>
select {
width: 100px;
border: 1px solid #CCC;
background-color: white;
}
</style>

<%= simple_form_for @location do |f| %>
  <%= f.input :name, :label => 'Operation Name' %>
  <%= f.input :location %>
  <%= f.label  :active %>
  <%= f.check_box :active %><br>
  <%= f.label :description %>
  <%= f.text_area :description, :rows => "5" %><br>
 
  <%= f.button :submit %>
<% end %>


